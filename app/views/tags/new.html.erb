
<!DOCTYPE html>
<html lang="en">
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% content_for :title do %>Add Tag - My Blog<% end %>
</head>
<body>
    <div class="container">
    	<div class="page-header">
    	  <h1>New Tag </h1>
        </div>
        <div class="row">
    		  <%= form_for [@article, @tags] do |f| %>    		
    		  <div class="field">
    		    <%= f.label :name %><br />
    		    <%= f.text_field :name %>
    		  </div>
    		  </br>
    		 <%= f.submit "Add"%>
    		  <% end %>
    		 <%= link_to 'Back', article_tags_path(@article), :class => "btn btn-large btn-primary" %>
        </div>
</div>
</body>
</html>
