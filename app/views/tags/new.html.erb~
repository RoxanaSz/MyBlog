<h1>New Tag </h1>


  <%= form_for [@article, @tags] do |f| %>
<% if f.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(f.errors.count, "error") %> prohibited this tag from being saved:</h2>
 
      <ul>
      <% f.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
 <%= f.submit "Add"%>
  <% end %>

<%= link_to 'Back', article_tags_path(@article) %>
