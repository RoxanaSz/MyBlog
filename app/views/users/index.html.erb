<!DOCTYPE html>
<html lang="en">
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% content_for :title do %>All Users - My Blog<% end %>
</head>
<body>
    <div class="container">
    	<div class="page-header">
    	 <h1>All Users </h1>
        </div>
        <div class="row">
			<table class="table table-striped">
			  <tr>
			  	<th>ID</th>
			    <th>First Name</th>
			     <th>Last Name</th>
			    <th>Email</th>
			    <th>Role</th>
			    <th colspan="3">Options</th>
			  </tr>
			  <% @users.each do |user| %>
			    <tr>
			      <td><%= user.id %></td>			    
			      <td><%= user.firstname %></td>			    
			      <td><%= user.lastname %></td>			
			      <td><%= user.email %></td>
			      <td><%= user.role  %></td>
			      <td><%= link_to 'Show', user_path(user), :class => "btn btn-default btn-primary" %></td>
			      <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-default btn-primary"  %></td>
			      <td><%= link_to 'Delete', user, method: :delete, confirm: 'Are you sure?', :class => "btn btn-default btn-primary"  %></td>
			    </tr>
			  <% end %>
			</table>			
			<%= link_to 'Back', root_path, :class => "btn btn-default btn-primary " %>
</div>
</div>
</body>
</html>
